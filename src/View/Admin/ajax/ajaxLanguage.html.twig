{% for language in languages %}
    <tr>
        <th scope="row">{{ loop.index }}</th>
        <td>{{ language.name }}</td>
        <td>{{ language.is_valid == 1 ? 'Certifier' : 'Pas certfier' }}</td>
        <td>{{ language.create_at }}</td>
        <td>
            <a href="language/{{ language.id }}">
                <i class="far fa-edit"></i>
            </a>
            /
            <a href="deleteLanguage/{{ language.id }}">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>
{% endfor %}
<input id="lengthTable" type="hidden" value="{{ lengthTable }}">
