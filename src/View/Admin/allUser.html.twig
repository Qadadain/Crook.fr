{% extends 'adminLayout.html.twig' %}
{% block title %}Admin - les utilisateurs{% endblock %}
{% block content %}

<section>
    <h1>Gestion des utilisateurs</h1>
    <div class="container">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Email </th>
                <th scope="col">Cr√©er le </th>
                <th scope="col">Modifier le</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.create_at }}</td>
                    <td>{{ user.update_at }}</td>
                    <td>{{ user.role_user == 'ROLE_USER' ? 'Membre' : 'Administrateur' }}</td>
                    <td>
                        <a href="editUser/{{ user.id }}">
                            <i class="far fa-edit"></i>
                        </a>
                        /
                        <a href="deleteUser/{{ user.id }}">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
</section>

{% endblock %}
{% block javascript %}<script src="/assets/js/ajaxLanguage.js"></script>{% endblock %}