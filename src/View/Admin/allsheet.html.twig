{% extends 'adminLayout.html.twig' %}
{% block title %}Admin - page AllSheet{% endblock %}
{% block content %}
<section>
    <h1>tout les sheets</h1>
    <div class="container">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titre</th>
                <th scope="col">Créer le </th>
                <th scope="col">Mis à jour le</th>
                <th scope="col">Auteur</th>
                <th scope="col">Language</th>
                <th scope="col">Popularité</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sheet in sheets %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ sheet.title }}</td>
                    <td>{{ sheet.created_at }}</td>
                    <td>{{ sheet.updated_at }}</td>
                    <td>{{ sheet.pseudo }}</td>
                    <td>{{ sheet.name }}</td>
                    <td>{{ sheet.popularity }}</td>
                    <td>
                        <a href="sheet/{{ sheet.id }}">
                            <i class="far fa-edit"></i>
                        </a>
                        /
                        <a href="deleteSheet/{{ sheet.id }}">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}