{% extends 'adminLayout.html.twig' %}
{% block title %}Admin - page d'acceuil{% endblock %}
{% block content %}
    <section>
        <div id="success-delete"></div>
        <div class="container">
        <h1 class="text-center">Récapitulatif des derniers sheets</h1>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Créer le </th>
                    <th scope="col">Mis à jour le</th>
                    <th scope="col">Popularité</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for sheet in sheets %}
                    <tr>
                    <th scope="row">{{ loop.index }}</th>
                            <td>{{ sheet.title }}</td>
                            <td>{{ sheet.created_at }}</td>
                            <td>{{ sheet.name }}</td>
                            <td>{{ sheet.popularity }}</td>
                            <td>
                                    <i class="far fa-edit"></i>
                                /
                                    <i class="fas fa-trash-alt trash-sheet" data-id="{{ sheet.id }}"></i>
                            </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
    <section>
        <div class="container">
        <h1 class="text-center">Récapitulatif des derniers utilisateurs</h1>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Email </th>
                    <th scope="col">Créer le </th>
                    <th scope="col">Modifier le</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                    <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.create_at }}</td>
                        <td>{{ user.update_at }}</td>
                        <td>{{ user.role_user == 'ROLE_USER' ? 'Membre' : 'Administrateur' }}</td>
                        <td>
                                <i class="far fa-edit"></i>
                            /
                            <i class="fas fa-trash-alt trash-user" data-id="{{ user.id }}"></i>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section><section>
        <div class="container">
        <h1 class="text-center">Récapitulatif des derniers langages</h1>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Si valide</th>
                    <th scope="col">Créer le</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for language in languages %}
                    <tr>
                    <th scope="row">{{ loop.index }}</th>
                        <td>{{ language.name }}</td>
                        <td>{{ language.is_valid == 1 ? 'Certifier' : 'Pas certfier' }}</td>
                        <td>{{ language.create_at }}</td>
                        <td>
                                <i class="far fa-edit"></i>
                            /
                            <i class="fas fa-trash-alt trash-language" data-id="{{ language.id }}"></i>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
 {% block javascript %}
 <script src="/assets/js/scriptSheet.js"></script> 
 <script src="/assets/js/scriptLanguage.js"></script>
     <script src="/assets/js/scriptUser.js"></script>
{% endblock %}