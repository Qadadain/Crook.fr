{% extends 'adminLayout.html.twig' %}
{% block title %}Admin - page d'acceuil{% endblock %}
{% block content %}
    <div class="container">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Si valide</th>
                <th scope="col">Créer le</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody id="languageTable">
            {% for language in languages %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ language.name }}</td>
                    <td>{{ language.is_valid == 1 ? 'Certifier' : 'Pas certfier' }}</td>
                    <td>{{ language.create_at }}</td>
                    <td>
                        <a href="editLanguage/{{ language.id }}">
                            <i class="far fa-edit"></i>
                        </a>
                        /
                        <a href="deleteLanguage/{{ language.id }}">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            <div class="col-6 text-left">
                <button class="btn btn-secondary" id="previous" value="{{ limit - 10 }}" style="display: none">Page précédente</button>
            </div>
            <div class="col-6 text-right">
                <button class="btn btn-primary" id="next" value="{{ limit }}">Page suivante</button>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}<script src="/assets/js/ajaxLanguage.js"></script>{% endblock %}
