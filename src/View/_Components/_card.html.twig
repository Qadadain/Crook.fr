{# todo CARD #}
<div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">{{ sheet.title }}</h5>
        <p class="card-text">{{ sheet.description }}</p>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardModal{{ sheet.id }}">
            Voir le sheet
        </button>

        <!-- Modal -->
        <div class="modal fade" id="cardModal{{ sheet.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalScrollableTitle">{{ sheet.title }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>{{ sheet.content }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# end CARD #}