<body>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <a class="navbar-brand" href="/">
        <div class="logo-image">
            <img src="https://zupimages.net/up/20/16/3j1o.png" class="img-fluid">
        </div>
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>

    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Acceuil<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/about">À propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Language/list">Langages</a>
                </li>
            {% if session.pseudo %}
                <li class="nav-item">
                    <p class="nav-link">Bonjour {{ session.pseudo }} !</p>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/form/add">Créer un sheet</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/favorite">Mes favoris</a>
                </li>
                {% if session.role_user is same as('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a href="/admin/home" class="nav-link">Administration</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="/user/logout">Déconnexion</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="/user/signin">Connexion / S'enregistrer</a>
                </li>
            {% endif %}
        </ul>

        <form  action="/home/search/" class="form-inline my-2 my-lg-0">
            <input  name="search" class="form-control mr-sm-2" type="search" placeholder="Recherche" aria-label="Search">
            <button type="submit" class="btn btn-dark">Recherche</button>

        </form>
    </div>
</nav>


{% block content %}{% endblock %}


